 */
public class Ejercicio13 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int contador=1;
		int multiplosde2=0;
		int multiplosde3=0;
		while (contador<=100){
			
			if (contador%2==0){
				System.out.println(contador);
				multiplosde2++;
			if (contador%3==0){
				System.out.println(contador);
				multiplosde3++;
				}


			}
			contador++;	

		}
		System.out.println("Hay " + multiplosde2 + " multiplos de 2");
		System.out.println("Hay " + multiplosde3 + " multiplos de 3");

	}

}
