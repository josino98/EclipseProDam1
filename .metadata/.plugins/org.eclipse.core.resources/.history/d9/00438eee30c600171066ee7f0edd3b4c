import java.util.Scanner;
public class EjercicioDni {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int pulsa; int opcion;int comodin=0;
		
		Scanner teclado= new Scanner(System.in);
		System.out.println("Pulsa 1 si eres español");
		System.out.println("Pulsa 2 si eres extranjero");
		do {
			pulsa= teclado.nextInt();
			
		} while (pulsa<1 || pulsa>2);
		opcion=pulsa;
		
		switch (opcion) {
		case 1:
			System.out.println("Introduce los digitos del DNI");
			int dni =teclado.nextInt();
			while (comodin<1) {
				if (((dni<00000000)||(dni>99999999))) {
					System.err.println("Error, no se permiten ni más o menos de 8 digitos");
					
				} else {
					comodin=1;
				}
				
			} 
			
			
			System.out.println("Ponme la letra");
			String espacio=teclado.nextLine();
			String Letra=teclado.nextLine();
		
			
				
			
			
			break;
			
			
			
			
			
			
			
			
			
			
			

		default:
			break;
		}
		
		
	
		


	}

}
